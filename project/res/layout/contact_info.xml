<?xml version="1.0" encoding="utf-8"?>

<!-- 标题栏   "   android:background="@drawable/chat_bg_default"-->
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e0e0e0"
    android:divider="#000"
    android:orientation="vertical"
    >
      <RelativeLayout
        android:id="@+id/contact_info_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="#cccccc"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/contact_info_back_btn"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/title_btn_back"
            android:onClick="chat_back"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="联系人信息"
            android:clickable="true"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/contact_info_right_btn"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/title_btn_right"
            android:src="@drawable/mm_title_btn_contact_normal" />
    </RelativeLayout>
<!-- 标题栏   android:background="@drawable/title_bar"-->
    <RelativeLayout
        android:id="@+id/contact_info_header_image_layout"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="#cccccc"
        android:divider="#000"
        android:layout_below="@id/contact_info_title_layout"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="头像"
            android:textColor="#333333"
            android:gravity="center"
            android:textSize="20sp" />

  

        <ImageView
            android:id="@+id/contact_info_header_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:background="@drawable/abaose"
            android:clickable="true"
            android:src="@drawable/shuaige" />
    </RelativeLayout>
    
     <ImageView
          android:id="@+id/contact_info_line1"
            android:layout_width="fill_parent"
            android:layout_below="@id/contact_info_header_image_layout"
            android:layout_height="1px"
            android:background="#000"
	/>
    
    <!-- 标题栏   android:background="@drawable/title_bar"-->
    <RelativeLayout
        android:id="@+id/contact_info_name_layout"
          android:layout_below="@id/contact_info_line1"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#cccccc"
         android:focusableInTouchMode="true"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="名字"
            android:textColor="#333333"
            android:gravity="center"
            android:textSize="20sp" />

  

        <TextView
            android:id="@+id/contact_info_name"
			android:textColor="#333333"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:text="好友"
            android:gravity="center"
            android:textSize="20sp" 
            android:divider="#000" />
    </RelativeLayout>
    
        <RelativeLayout
        android:id="@+id/contact_info_bottom_layout"
       
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#cccccc"
         android:focusableInTouchMode="true"
    android:layout_alignParentBottom="true" 
        >

        <Button
            android:id="@+id/contact_info_chat_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            
            android:text="聊天"
            android:textColor="#333333"
            android:gravity="center"
            android:textSize="20sp" />

    </RelativeLayout>

</RelativeLayout>